<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:paddingBottom="3dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgViewEvento"
                android:src="@drawable/calaca"
                android:background="#00000000"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="FESTIVAL DE LA CALACA 2015"
                android:id="@+id/eventTitle"
                android:textSize="22dp"
                android:textColor="#132357"
                android:layout_margin="3dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="2016-02-06  |  9:30 AM"
                android:id="@+id/eventDate"
                android:textSize="18dp"
                android:textColor="#00bbac"
                android:textStyle="bold"
                android:padding="3dp"
                android:paddingLeft="3dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CASA DE LA CULTURA, PLAZA 13 DE JULIO Y PLAZA DE LA PISTOLA"
                android:id="@+id/eventPlace"
                android:textSize="18dp"
                android:textColor="#5b2c7c"
                android:textStyle="bold"
                android:padding="3dp"
                android:paddingLeft="3dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:id="@+id/imageView2"
        android:src="@drawable/lineas" />

</LinearLayout>