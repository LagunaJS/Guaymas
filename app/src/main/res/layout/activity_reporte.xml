<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="mx.pitalla.g6.ReporteActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="300dp"
            android:weightSum="1"
            android:padding="5dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="REPORTE CIUDADANO"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#591480"
                android:textSize="25dp"
                android:paddingLeft="10dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editText"
                android:hint="Interesado"
                style="@style/campo"
                android:paddingStart="9dp" />

            <EditText
                style="@style/campo"
                android:id="@+id/editText3"
                android:hint="Dirección"
                android:paddingStart="9dp" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:id="@+id/spnColonia"
                android:spinnerMode="dialog"
                android:background="#ffffff"
                style="@style/campo" />

            <EditText
                style="@style/campo"
                android:id="@+id/editText4"
                android:hint="Teléfono"
                android:paddingStart="9dp" />

            <EditText
                style="@style/campo"
                android:id="@+id/editText2"
                android:hint="Correo"
                android:paddingStart="9dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="130dp">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton11"
                    android:src="@drawable/bache"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton10"
                    android:src="@drawable/alumbrado"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton12"
                    android:src="@drawable/otro"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:hint="Asunto"
                android:id="@+id/textView2"
                style="@style/campo"
                android:paddingStart="9dp"
                android:textColor="#ababab" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:layout_margin="3dp"
        android:padding="5dp">

        <Button
            android:text="Solicitar Petición"
            android:id="@+id/button"
            style="@style/btnmorado" />

    </LinearLayout>

</LinearLayout>
